    }

    p {
      font-size: 1.4em;
      line-height: 1.5;
    }

    button {
      margin: 12px;
      padding: 14px 28px;
      border: none;
      border-radius: 30px;
      font-size: 18px;
      cursor: pointer;
      font-weight: bold;
      transition: all 0.3s ease;
    }

    #yesBtn {
      background: white;
      color: #ff4d6d;
      transform: scale(1);
    }
    #yesBtn:hover { transform: scale(1.05); }

    #noBtn {
      background: transparent;
