<body>

  <div class="card">
    <h2 id="title">Hey Nn…õnna üëÄ</h2>
    <p id="text">
      May I be your Valentine? üíå
    </p>

    <div id="buttons">
      <button id="yesBtn" onclick="yes()">Yes üíñ</button>
      <button id="noBtn" onmouseover="moveNo()">No üôà</button>
    </div>

    <img id="meme" src="https://i.imgflip.com/7v1y5j.jpg" alt="cute meme">

    <button id="spotifyControl" onclick="playSpotify()">‚ñ∂ Play Song</button>
  </div>

  <!-- Spotify embed for LUV by Tory Lanez -->
  <iframe 
    id="spotify"
    src="https://open.spotify.com/embed/track/16Ah4QqH4mgYVXqfC4mdSd?autoplay=1"
    width="0"
    height="0"
    allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture">
  </iframe>

  <script>
    const spotify = document.getElementById('spotify');
    const spotifyControl = document.getElementById('spotifyControl');

    function playSpotify() {
      spotify.contentWindow.postMessage('{"method":"play"}', '*');
      spotifyControl.style.display = 'none';
    }

    function yes() {
      document.getElementById("title").innerText = "YAYYY ü•π‚ù§Ô∏è";
      document.getElementById("text").innerHTML =
        "<span class='celebrate'>You just made me smile for real üòåüíê<br>Happy Valentine, Nn…õnna üåº‚ù§Ô∏è</span>";
      document.getElementById("buttons").style.display = "none";

      // show animated meme
      const meme = document.getElementById("meme");
      meme.style.display = "block";
      meme.style.animation = "memePop 0.8s forwards";

      playSpotify();
      celebrateHearts();
    }

    function moveNo() {
      const noBtn = document.getElementById("noBtn");
      const x = Math.random() * (window.innerWidth - noBtn.offsetWidth);
      const y = Math.random() * (window.innerHeight - noBtn.offsetHeight);
      noBtn.style.left = x + "px";
      noBtn.style.top = y + "px";
    }

    function createHeart() {
      const heart = document.createElement("div");
      heart.className = "heart";
      heart.innerText = "‚ù§Ô∏è";
      heart.style.left = Math.random() * 100 + "vw";
      heart.style.setProperty('--duration', (3 + Math.random() * 3) + 's');
      // rainbow colors
      const colors = ['#ff4d6d','#ffeb3b','#4dd0e1','#ff8fab','#9c27b0','#ff9800'];
      heart.style.setProperty('--color', colors[Math.floor(Math.random()*colors.length)]);
      document.body.appendChild(heart);
      setTimeout(() => heart.remove(), 8000);
    }

    function celebrateHearts() {
      setInterval(createHeart, 300);
    }
    setInterval(createHeart, 700);
  </script>

</body>
